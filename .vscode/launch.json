{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Current TS File",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsx",
      "args": ["${file}"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Debug Vitest Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/vitest",
      "args": ["run", "--reporter=verbose"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Debug Vitest Current File",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/vitest",
      "args": ["run", "${relativeFile}", "--reporter=verbose"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Debug Admin API",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsx",
      "args": ["watch", "${workspaceFolder}/packages/admin-api/src/index.ts"],
      "cwd": "${workspaceFolder}/packages/admin-api",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env.admin-api"
    },
    {
      "name": "Debug Publisher",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsx",
      "args": ["watch", "${workspaceFolder}/packages/publisher/src/index.ts"],
      "cwd": "${workspaceFolder}/packages/publisher",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env.publisher"
    },
    {
      "name": "Debug Story Generator",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsx",
      "args": ["watch", "${workspaceFolder}/packages/story-generator/src/index.ts"],
      "cwd": "${workspaceFolder}/packages/story-generator",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env.story-generator"
    },
    {
      "name": "Attach to Node Process",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"]
    }
  ],
  "compounds": [
    {
      "name": "Debug All Services",
      "configurations": ["Debug Admin API", "Debug Publisher", "Debug Story Generator"]
    }
  ]
}
