{
  "name": "@mystira/chain",
  "version": "0.1.0",
  "private": true,
  "description": "Blockchain infrastructure, smart contracts, and Web3 integration for Mystira",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "hardhat compile || echo 'Warning: Hardhat compilation failed, continuing...'",
    "dev": "hardhat node",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "compile": "hardhat compile",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network testnet",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network mainnet",
    "verify": "hardhat verify",
    "lint": "eslint . --ext .ts || true",
    "clean": "hardhat clean"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "ethers": "^6.8.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@types/node": "^25.0.1",
    "hardhat": "^2.19.0",
    "typescript": "^5.3.0"
  }
}
