<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <RootNamespace>Mystira.Infrastructure.Data</RootNamespace>

    <!-- NuGet Package Metadata -->
    <PackageId>Mystira.Infrastructure.Data</PackageId>
    <Version>0.5.1-alpha</Version>
    <Authors>Mystira Team</Authors>
    <Company>PhoenixVC</Company>
    <Description>Mystira platform data infrastructure. EF Core repositories, specifications, polyglot persistence, and data access patterns.</Description>
    <PackageTags>mystira;infrastructure;data;efcore;cosmos;postgres;redis</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/phoenixvc/Mystira.workspace</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/phoenixvc/Mystira.workspace.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>

    <!-- Build configuration -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <IsPackable>true</IsPackable>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <!-- Source Link for debugging -->
  <PropertyGroup>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore.Cosmos" Version="10.0.1" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.InMemory" Version="10.0.1" />
    <!-- PostgreSQL provider for polyglot persistence (per ADR-0013/0014) -->
    <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" Version="9.0.4" />
    <PackageReference Include="JsonSchema.Net" Version="8.0.5" />
    <!-- Ardalis.Specification EF Core integration (per workspace ADR-0014) -->
    <PackageReference Include="Ardalis.Specification.EntityFrameworkCore" Version="9.3.1" />
    <!-- Polly for resilience patterns (per workspace ADR-0014) -->
    <PackageReference Include="Polly" Version="8.6.5" />
    <!-- Redis caching (per workspace ADR-0014) -->
    <PackageReference Include="Microsoft.Extensions.Caching.StackExchangeRedis" Version="10.0.1" />
    <PackageReference Include="AspNetCore.HealthChecks.Redis" Version="9.0.0" />
    <!-- Source Link -->
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All" />
  </ItemGroup>

  <!-- Workspace project references -->
  <ItemGroup>
    <ProjectReference Include="..\..\domain\Mystira.Domain\Mystira.Domain.csproj" />
    <ProjectReference Include="..\..\application\Mystira.Application\Mystira.Application.csproj" />
    <ProjectReference Include="..\..\shared\Mystira.Shared\Mystira.Shared.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
