<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <!-- Suppress XML documentation warnings for migrated StoryGenerator contracts -->
    <NoWarn>$(NoWarn);CS1591;CS1587</NoWarn>

    <!-- Package metadata -->
    <PackageId>Mystira.Contracts</PackageId>
    <Version>0.3.0-alpha</Version>
    <Authors>Mystira Team</Authors>
    <Company>PhoenixVC</Company>
    <Description>Unified API contracts for Mystira platform - consolidates Mystira.App.Contracts and Mystira.StoryGenerator.Contracts</Description>
    <PackageTags>mystira;contracts;api;types</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/phoenixvc/Mystira.workspace</PackageProjectUrl>
    <RepositoryUrl>https://github.com/phoenixvc/Mystira.workspace.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>

    <!-- Build configuration -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <!-- Source Link for debugging -->
  <PropertyGroup>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All"/>
    <!-- StoryGenerator contracts dependencies -->
    <PackageReference Include="OpenAI" Version="2.8.0" />
    <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
  </ItemGroup>

</Project>
