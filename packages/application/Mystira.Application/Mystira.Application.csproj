<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <RootNamespace>Mystira.Application</RootNamespace>

    <!-- NuGet Package Metadata -->
    <PackageId>Mystira.Application</PackageId>
    <Version>0.5.0-alpha</Version>
    <Authors>Mystira Team</Authors>
    <Company>PhoenixVC</Company>
    <Description>Mystira platform application layer. CQRS commands/queries, handlers, validators, specifications, and application services.</Description>
    <PackageTags>mystira;application;cqrs;wolverine;specifications</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/phoenixvc/Mystira.workspace</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/phoenixvc/Mystira.workspace.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>

    <!-- Build configuration -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <IsPackable>true</IsPackable>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <!-- Source Link for debugging -->
  <PropertyGroup>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
  </PropertyGroup>

  <ItemGroup>
    <!-- Wolverine for event-driven messaging (ADR-0015) -->
    <PackageReference Include="WolverineFx" Version="5.9.2" />
    <!-- Mapperly for compile-time object mapping -->
    <PackageReference Include="Riok.Mapperly" Version="4.3.1" />
    <!-- FluentValidation -->
    <PackageReference Include="FluentValidation" Version="12.1.1" />
    <PackageReference Include="FluentValidation.DependencyInjectionExtensions" Version="12.1.1" />
    <!-- DI abstractions -->
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.11" />
    <!-- JSON Schema -->
    <PackageReference Include="NJsonSchema" Version="11.5.2" />
    <!-- Ardalis.Specification for composable query patterns (ADR-0014) -->
    <PackageReference Include="Ardalis.Specification" Version="9.3.1" />
    <!-- YAML serialization for character maps -->
    <PackageReference Include="YamlDotNet" Version="16.3.0" />
    <!-- Source Link -->
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All" />
  </ItemGroup>

  <!-- Workspace project references -->
  <ItemGroup>
    <ProjectReference Include="..\..\domain\Mystira.Domain\Mystira.Domain.csproj" />
    <ProjectReference Include="..\..\contracts\dotnet\Mystira.Contracts\Mystira.Contracts.csproj" />
    <ProjectReference Include="..\..\shared\Mystira.Shared\Mystira.Shared.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
