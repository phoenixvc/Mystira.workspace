{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "local>phoenixvc/Mystira.workspace:renovate-config"
  ],
  "baseBranches": ["dev"],
  "ignorePaths": [
    "**/node_modules/**",
    "**/vendor/**",
    "**/.terraform/**"
  ],
  "packageRules": [
    {
      "description": "Disable updates for submodule packages (managed separately)",
      "matchPaths": ["packages/admin-api/**", "packages/publisher/**"],
      "enabled": false
    }
  ]
}
