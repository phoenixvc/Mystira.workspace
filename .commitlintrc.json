{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      ["chain", "app", "story-generator", "infra", "workspace", "deps"]
    ],
    "scope-empty": [0],
    "scope-case": [2, "always", "lower-case"]
  }
}
