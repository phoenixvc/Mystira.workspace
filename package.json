{
  "name": "mystira-workspace",
  "version": "0.1.0",
  "private": true,
  "description": "Unified workspace for Mystira platform",
  "repository": {
    "type": "git",
    "url": "https://github.com/phoenixvc/Mystira.workspace.git"
  },
  "workspaces": [
    "packages/*",
    "infra"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@commitlint/cli": "^18.4.0",
    "@commitlint/config-conventional": "^20.2.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "pnpm-lock.yaml": [
      "prettier --write"
    ]
  }
}
